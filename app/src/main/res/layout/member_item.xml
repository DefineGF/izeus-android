<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_member_label"
        android:text="用户n:"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#CEA50A"/>
    <RelativeLayout
        android:id="@+id/topPanel"
        style="@style/FragmentTopPanelStyle">
        <TextView
            android:id="@+id/name"
            android:text="真实姓名"
            style="@style/FragmentTextViewStyle"/>
        <TextView
            android:id="@+id/account"
            android:text="个人账号"
            style="@style/FragmentTextViewStyle"
            android:layout_below="@id/name"/>
        <TextView
            android:id="@+id/id_number"
            android:text="身份证号"
            android:layout_below="@id/account"
            style="@style/FragmentTextViewStyle"/>
        <TextView
            android:id="@+id/phone_num"
            android:text="联系方式"
            style="@style/FragmentTextViewStyle"
            android:layout_below="@id/id_number"/>

        <EditText
            android:id="@+id/et_member_name"
            android:layout_toEndOf="@id/name"
            android:layout_alignBaseline="@id/name"
            style="@style/FragmentEditTextStyle"/>

        <EditText
            android:id="@+id/et_member_account"
            android:layout_toEndOf="@id/account"
            android:layout_alignBaseline="@id/account"
            style="@style/FragmentEditTextStyle"/>


        <EditText
            android:id="@+id/et_member_id"
            android:layout_toEndOf="@id/id_number"
            android:layout_alignBaseline="@id/id_number"
            style="@style/FragmentEditTextStyle"/>

        <EditText
            android:id="@+id/et_member_contact"
            android:layout_toEndOf="@id/phone_num"
            android:layout_alignBaseline="@id/phone_num"
            style="@style/FragmentEditTextStyle"/>
    </RelativeLayout>
</LinearLayout>